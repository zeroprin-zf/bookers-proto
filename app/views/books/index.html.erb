<h1>Books</h1>

<% @books.each do |book| %>
 <h4>Title</h4>
 <span><%= book.title %></span>

 <h4>Body</h4>
 <span><%= book.body %></span>
 <span><%= link_to "show", book_path(book.id) %>
       <%= link_to "edit", edit_book_path(book.id) %></span>
<% end %>

<h1>New book</h1>
<%= form_with model: @book do |f| %><%#ブロック変数fを使う。fにはbookモデルの情報が含まれている。@bookに入っている%>
 <h4>Title</h4>
 <%= f.text_field :title %><%#上のmodelで設定しているモデルのカラム名とrailsは判断できる%>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'create Book' %>
<% end %>
